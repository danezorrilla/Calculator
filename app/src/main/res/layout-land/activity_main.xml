<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/user_input_textview"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:padding="8dp"
        android:text="0"
        android:textAlignment="viewEnd"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_weight=".15"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".85"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight=".25"
                android:id="@+id/left_par"
                android:text="("
                android:onClick="calcClick"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight=".25"
                android:id="@+id/right_par"
                android:text=")"
                android:onClick="calcClick"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight=".25"
                android:id="@+id/Pi"
                android:text="Pi"
                android:onClick="calcClick"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/ac_button"
                android:layout_weight=".25"
                android:text="AC"
                android:onClick="calcClick"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/neg_pos_button"
                android:layout_weight=".25"
                android:text="+/-"
                android:onClick="calcClick"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/modulus_button"
                android:layout_weight=".25"
                android:text="%"
                android:onClick="calcClick"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/division_button"
                android:layout_weight=".25"
                android:text="&#247;"
                android:onClick="calcClick"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight=".25"
                android:id="@+id/squrt"
                android:text="squrt"
                android:onClick="calcClick"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight=".25"
                android:id="@+id/cubrt"
                android:text="cubrt"
                android:onClick="calcClick"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight=".25"
                android:id="@+id/pow"
                android:text="pow"
                android:onClick="calcClick"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/seven_button"
                android:layout_weight=".25"
                android:text="7"
                android:onClick="calcClick"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/eight_button"
                android:layout_weight=".25"
                android:text="8"
                android:onClick="calcClick"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/nine_button"
                android:layout_weight=".25"
                android:text="9"
                android:onClick="calcClick"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/multiply_button"
                android:layout_weight=".25"
                android:text="*"
                android:onClick="calcClick"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight=".25"
                android:id="@+id/log"
                android:text="log"
                android:onClick="calcClick"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight=".25"
                android:id="@+id/log10"
                android:text="log10"
                android:onClick="calcClick"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight=".25"
                android:id="@+id/E"
                android:text="E"
                android:onClick="calcClick"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/four_button"
                android:layout_weight=".25"
                android:text="4"
                android:onClick="calcClick"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/five_button"
                android:layout_weight=".25"
                android:text="5"
                android:onClick="calcClick"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/six_button"
                android:layout_weight=".25"
                android:text="6"
                android:onClick="calcClick"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/subtract_button"
                android:layout_weight=".25"
                android:text="-"
                android:onClick="calcClick"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight=".25"
                android:id="@+id/tan"
                android:text="tan"
                android:onClick="calcClick"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight=".25"
                android:id="@+id/cos"
                android:text="cos"
                android:onClick="calcClick"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight=".25"
                android:id="@+id/sin"
                android:text="sin"
                android:onClick="calcClick"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/one_button"
                android:layout_weight=".25"
                android:text="1"
                android:onClick="calcClick"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/two_button"
                android:layout_weight=".25"
                android:text="2"
                android:onClick="calcClick"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/three_button"
                android:layout_weight=".25"
                android:text="3"
                android:onClick="calcClick"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/add_button"
                android:layout_weight=".25"
                android:text="+"
                android:onClick="calcClick"/>
        </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight=".25"
                    android:id="@+id/atan"
                    android:text="atan"
                    android:onClick="calcClick"/>
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight=".25"
                    android:id="@+id/acos"
                    android:text="acos"
                    android:onClick="calcClick"/>
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight=".25"
                    android:id="@+id/asin"
                    android:text="asin"
                    android:onClick="calcClick"/>
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/zero_button"
                    android:layout_weight=".25"
                    android:text="0"
                    android:onClick="calcClick"/>
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/decimal_button"
                    android:layout_weight=".25"
                    android:text="."
                    android:onClick="calcClick"/>
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/equal_button"
                    android:layout_weight=".25"
                    android:text="="
                    android:onClick="calcClick"/>
            </LinearLayout>


    </LinearLayout>


</LinearLayout>